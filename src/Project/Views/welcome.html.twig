{% extends 'Templates/base.html.twig' %}

{% block title %}Welcome back - Umbrella{% endblock %}

{% block content %}
    <div id="logo">
        <img src="/img/umbrella-logo.png" alt="Umbrella">
    </div>
    <div id="welcome_text">
        {% if name %}
            <h2>Hello {{ name }}!</h2>
        {% endif %}

        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}

        <h2>{{ text }}</h2>
    </div>
{% endblock %}